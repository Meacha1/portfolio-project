doctype html
html
  head
    title Create Account
    link(rel="stylesheet", href="../css/createUser.css")
  body
    header
      nav
        ul
          a(href='/')
            img(src='../images/logo.png', alt='logo')
          li: a(href="/") Home
          li: a(href="#abouteUs") About Us
          li: a(href="#contact") Contact
        ul
          li: a(href="/login", class="myButton") Login
    .container
      form(action="/createUser", method="POST")
        p Already have an account? 
          a(href="/login") Log-in
        label(for="username") Username:
        input(type="text", id="username", name="username", required)
        br
        br
        label(for="email") Email:
        input(type="email", id="email", name="email", required)
        br
        br
        label(for="password") Password:
        input(type="password", id="password", name="password", minlength="8", required)
        br
        br
        label(for="password2") Confirm Password:
        input(type="password", id="password2", name="password2", pattern="^.{8,}$", oninput="checkPasswordMatch()")
        br
        br
        script.
          function checkPasswordMatch() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("password2").value;
            if (password !== confirmPassword) {
              document.getElementById("password2").setCustomValidity("Passwords do not match.");
            } else {
              document.getElementById("password2").setCustomValidity("");
            }
          }
        button(type="submit", value="createUser") Create Account
  footer
